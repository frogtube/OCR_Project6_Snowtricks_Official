{% extends 'base.html.twig' %}

{% block title %}Snowtricks | Trick list{% endblock %}

{% block body %}

    <header class="masthead text-center text-white d-flex">
        <div class="container my-auto">
            <div class="row">
                <div class="col-lg-10 mx-auto">
                    <h1 class="text-uppercase">
                        <strong>Snowtricks</strong>
                    </h1>
                    <hr>
                </div>
                <div class="col-lg-8 mx-auto">
                    <p class="text-faded mb-5">Join the best snowboard online community</p>
                    <a class="btn btn-primary btn-xl js-scroll-trigger" href="#tricks">See awesome tricks</a>
                </div>
            </div>
        </div>
    </header>


    <section id="tricks">
        <div class="container">
            <div class="row">

                {% for trick in tricks %}
                <div class="col-lg-4 col-md-6 mb-4">

                        <div class="card h-100">
                            <a href="{{ path('trick_show', { 'slug':trick.slug }) }}">

                                {% for image in trick.images|slice(0, 1) %}
                                    <img class="card-img-top" src="{{ asset('uploads/images/'~image.filename) }}" alt="">
                                {% endfor %}

                            </a>
                        <div class="card-body">
                            <h4 class="card-title">

                                <a href="{{ path('trick_show', { 'slug':trick.slug }) }}">{{ trick.name }}</a>
                                {% if is_granted('ROLE_USER') %}
                                    <a href="{{ path('trick_edit', { 'slug':trick.slug }) }}"><i class="fa fa-pencil-square-o fa-fw pull-right"></i></a>
                                    <a href="{{ path('trick_delete', { 'slug':trick.slug }) }}"><i class="fa fa-trash fa-fw pull-right"></i></a>
                                {% endif %}

                            </h4>

                        </div>
                    </div>

                </div>
                {% endfor %}


