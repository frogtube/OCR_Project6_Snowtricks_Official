{% extends 'base.html.twig' %}

{% block title %}Liste des tricks{% endblock %}

{% block body %}

    <h1>{{ trick.name }}</h1>
    <h2>{{ trick.group }}</h2>
    <p>{{ trick.description }}</p>

    <h2>Vos commentaires</h2>
    {% for comment in trick.comments %}
        <p>{{ comment.content }}</p>
    {% endfor %}

    <h2>Les images</h2>
    {% for image in trick.images %}
        <p>{{ image.caption }}</p>
    {% endfor %}

    <h2>Les videos</h2>
    {% for video in trick.videos %}
        <p>{{ video.caption }}</p>
    {% endfor %}

{% endblock %}